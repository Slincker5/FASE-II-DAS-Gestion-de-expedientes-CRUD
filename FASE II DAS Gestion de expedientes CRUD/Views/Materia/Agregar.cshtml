@model FASE_II_DAS_Gestion_de_expedientes_CRUD.Models.Materium

@{
    Layout = "_BaseTailwind";
    ViewData["Title"] = "Agregar Materia";
}

<h1 class="font-semibold text-lg p-4 flex items-center justify-between">
    <a asp-controller="Materia" asp-action="Index"
       class="font-medium text-blue-600 text-sm">
        <i class="fa-duotone fa-arrow-left"></i> Volver
    </a>
    Agregar Nueva Materia
</h1>

<div class="bg-white shadow p-6 rounded-md">

    <form asp-action="Agregar" asp-controller="Materia" method="post">
        <div class="flex flex-col gap-4">
            <div>
                <label for="NombreMateria" class="font-medium block mb-1">Nombre de la Materia:</label>
                <input type="text" id="NombreMateria" name="NombreMateria"
                       placeholder="Nombre de la materia"
                       class="border border-gray-300 rounded-md p-2 w-full focus:ring focus:ring-blue-300" required />
            </div>

            <div>
                <label for="Docente" class="font-medium block mb-1">Docente:</label>
                <input type="text" id="Docente" name="Docente"
                       placeholder="Nombre del docente"
                       class="border border-gray-300 rounded-md p-2 w-full focus:ring focus:ring-blue-300" required />
            </div>

            <div class="flex justify-end mt-4">
                <button type="submit"
                        class="bg-blue-600 text-white px-5 py-2 rounded-md shadow-md hover:bg-blue-700">
                    Guardar Materia
                </button>
            </div>
        </div>
    </form>
</div>
