
@{
    Layout = "_BaseTailwind";
    ViewData["Title"] = "Agregar Alumno";
}

<h1 class="font-semibold text-lg p-4 flex items-center  justify-between">
    <a asp-controller="Home" asp-action="Index" class="font-medium text-blue-600 text-sm"><i class="fa-duotone fa-regular fa-arrow-left"></i> Regresar</a>
    Agregar Alumno
</h1>

<div class="bg-white">

    <form asp-action="Agregar" asp-controller="EditarEstudiante" method="post">
        <div class="flex flex-wrap gap-y-8">
            <div class="w-1/2 p-4 flex items-center justify-between gap-x-4">
                <label for="Nombre" class="font-medium">Nombre: </label>
                <input type="text" name="Nombre" id="Nombre" placeholder="Escribe tu nombre" class="border border-solid border-[#ddd] p-4 py-1 rounded-sm flex-1" required/>
            </div>
            <div class="w-1/2 p-4 flex items-center justify-between gap-x-4">
                <label for="Apellido">Apellido: </label>
                <input type="text" name="Apellido" id="Apellido" placeholder="Escribe tu apellido" class="border border-solid border-[#ddd] p-4 py-1 rounded-sm flex-1" required/>
            </div>

            <div class="w-1/2 p-4 flex items-center justify-between gap-x-4">
                <label for="FechaNacimiento">Fecha de Nacimiento: </label>
                <input type="date" name="FechaNacimiento" id="FechaNacimiento" class="border border-solid border-[#ddd] p-4 py-1 rounded-sm flex-1" required/>
            </div>
            <div class="w-1/2 p-4 flex items-center justify-between gap-x-4">
                <label for="Grado">Grado academico: </label>
                <input type="text" name="Grado" id="Grado" pattern="[1-9]" placeholder="Escribe tu grado" class="border border-solid border-[#ddd] p-4 py-1 rounded-sm flex-1" required/>
            </div>
        </div>
        <div class="flex justify-end p-4">
            <button class="bg-blue-600 text-white p-3 py-2 rounded-sm shadow-md shadow-black/40">Agregar Nuevo Alumno</button>
        </div>
    </form>
</div>
