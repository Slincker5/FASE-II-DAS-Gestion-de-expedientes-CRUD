@model List<FASE_II_DAS_Gestion_de_expedientes_CRUD.Models.Alumno>

@{
    Layout = "_BaseTailwind";
    ViewData["Title"] = "Gestión de Expedientes";
}

<h1 class="font-semibold text-lg p-4 flex items-center  justify-between">Lista de alumnos
    <a href="" class="font-medium text-blue-600 text-sm"><i class="fa-duotone fa-regular fa-user-plus"></i> Agregar Alumno</a>
</h1>

@if (Model.Count == 0)
{
    <div class="p-4 text-gray-500 italic">Sin alumnos registrados.</div>
}
else
{
    <div class="p-4 space-y-3">
        <div class="p-3 border-b border-[#ddd] border-solid bg-gray-50 flex items-center justify-between">
            <div class="flex items-center justify-between flex-1">
                <p class="font-medium w-[33.33%]">Alumno</p>
                <p class="font-medium w-[33.33%]">Grado</p>
                <p class="font-medium w-[33.33%]">Fecha de nacimiento</p>
            </div>
            <div class="flex items-center  justify-between gap-x-16">
                <p class="font-medium text-gray-600">Editar</p>
                <p class="font-medium text-gray-600">Eliminar</p>
            </div>
        </div>
        @foreach (var alumno in Model)
        {
            <div class="p-3 border-b border-[#ddd] border-solid bg-white flex items-center justify-between">
               <div class="flex items-center justify-between gap-x-4 flex-1">
                    <a class="font-medium w-[33.33%] underline text-blue-600">@alumno.Nombre @alumno.Apellido</a>
                    <p class="text-sm text-gray-600 text-left w-[25%]">Grado: @alumno.Grado</p>
                    <p class="text-sm text-gray-600 w-[33.33%]">Fecha de nacimiento: @alumno.FechaNacimiento?.ToShortDateString()</p>
               </div> 
               <div class="ml-8">
                    <a href="" class="text-green-600 font-medium text-sm px-3 py-2"><i class="fa-duotone fa-light fa-pen"></i> Editar</a>
                    <a href="" class="text-red-600 font-medium text-sm px-3 py-2"><i class="fa-duotone fa-light fa-trash"></i> Eliminar</a>
               </div>
            </div>
        }
    </div>
}
