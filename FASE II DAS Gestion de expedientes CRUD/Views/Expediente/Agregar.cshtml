@model FASE_II_DAS_Gestion_de_expedientes_CRUD.Models.Expediente

@{
    Layout = "_BaseTailwind";
    ViewData["Title"] = "Agregar Expediente";
    var materias = ViewBag.Materias as List<FASE_II_DAS_Gestion_de_expedientes_CRUD.Models.Materium>;
}

<h1 class="font-semibold text-lg p-4 flex items-center justify-between">
    <a asp-controller="Expediente" asp-action="Ver" asp-route-id="@Model.AlumnoId"
       class="font-medium text-blue-600 text-sm">
        <i class="fa-duotone fa-regular fa-arrow-left"></i> Regresar al expediente
    </a>
    Agregar Expediente
</h1>

<div class="bg-white shadow p-6 rounded-md">

    <form asp-action="Agregar" asp-controller="Expediente" method="post">
        <input type="hidden" name="AlumnoId" value="@Model.AlumnoId" />

        <div class="space-y-6">
            <div class="flex flex-col md:flex-row items-center justify-between gap-x-4">
                <label class="font-medium w-1/3 md:w-1/4">Materia:</label>
                <select name="MaterialId"
                        class="border border-gray-300 p-2 rounded-md flex-1 focus:ring focus:ring-blue-300">
                    <option value="">Selecciona una materia</option>
                    @foreach (var materia in materias)
                    {
                        <option value="@materia.MaterialId">@materia.NombreMateria</option>
                    }
                </select>
            </div>

            <div class="flex flex-col md:flex-row items-center justify-between gap-x-4">
                <label for="NotaFinal" class="font-medium w-1/3 md:w-1/4">Nota Final:</label>
                <input type="number" step="0.1" min="0" max="10"
                       name="NotaFinal" id="NotaFinal"
                       class="border border-gray-300 p-2 rounded-md flex-1 focus:ring focus:ring-blue-300" required />
            </div>

            <div class="flex flex-col md:flex-row items-start justify-between gap-x-4">
                <label for="Observaciones" class="font-medium w-1/3 md:w-1/4">Observaciones:</label>
                <textarea name="Observaciones" id="Observaciones"
                          class="border border-gray-300 p-2 rounded-md flex-1 h-28 resize-none focus:ring focus:ring-blue-300"></textarea>
            </div>
        </div>

        <div class="flex justify-end mt-8">
            <button type="submit"
                    class="bg-blue-600 text-white px-5 py-2 rounded-md shadow-md hover:bg-blue-700">
                Guardar Expediente
            </button>
        </div>
    </form>
</div>
